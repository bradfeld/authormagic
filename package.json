{
  "name": "authormagic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "restart": "node scripts/restart-dev-server.js",
    "dev:watch": "node scripts/auto-restart-watcher.js",
    "query": "node scripts/run-query.js",
    "build": "NODE_NO_WARNINGS=1 next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "validate-production": "node scripts/validate-production.js",
    "env:validate": "node scripts/validate-env.js",
    "env:backup": "node scripts/manage-env.js backup",
    "env:restore": "node scripts/manage-env.js restore",
    "env:list": "node scripts/manage-env.js list",
    "env:setup": "node scripts/manage-env.js setup",
    "env:guide": "node scripts/manage-env.js help",
    "security:setup": "node scripts/setup-secure-env.js",
    "security:scan": "node scripts/detect-secrets.js",
    "security:hawk:scan": "hawk scan",
    "security:hawk:init": "hawk init",
    "security:hawk:validate": "hawk validate config",
    "security:hawk:local": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && npm run dev & sleep 8 && hawk scan && pkill -f 'next dev'",
    "admin:setup": "node scripts/setup-production-admin.js",
    "predev": "npm run env:validate",
    "prebuild": "echo 'Skipping validation for deployment test'",
    "prepare": "husky",
    "sitemap": "next-sitemap",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.23",
    "@clerk/nextjs": "^6.24.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/ssr": "^0.5.0",
    "@supabase/supabase-js": "^2.52.1",
    "ai": "^4.3.19",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "geist": "^1.4.2",
    "lucide-react": "^0.456.0",
    "next": "15.3.5",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.3.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  }
}
